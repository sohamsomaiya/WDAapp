<!-- res/layout/bottom_sheet_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Content of your bottom sheet dialog -->
    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?attr/bottomSheetStyle"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- Bottom sheet contents. -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textFont1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                app:strokeColor="@color/blue"
                app:cardElevation="@dimen/cardview_default_elevation"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arial"
                    android:gravity="center"
                    android:fontFamily="@font/arial"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textFont2"
                android:layout_width="match_parent"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:strokeColor="@color/blue"
                android:clickable="true"
                android:focusable="true"
                android:checkable="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Consolas"
                    android:fontFamily="@font/consolas"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textFont3"
                android:layout_width="match_parent"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:clickable="true"
                app:strokeColor="@color/blue"
                android:checkable="true"
                android:layout_height="50dp"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Gill Sans"
                    android:fontFamily="@font/gillsans"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textFont4"
                android:layout_width="match_parent"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:clickable="true"
                app:strokeColor="@color/blue"
                android:checkable="true"
                android:layout_height="50dp"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Verdana"
                    android:fontFamily="@font/verdana"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textFont5"
                android:layout_width="match_parent"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:clickable="true"
                android:checkable="true"
                app:strokeColor="@color/blue"
                android:layout_height="50dp"
                android:focusable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calisto-MT"
                    android:gravity="center"
                    android:fontFamily="@font/calist"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    />
            </com.google.android.material.card.MaterialCardView>
            <Button
                android:id="@+id/closeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:layout_gravity="center"/>
        </LinearLayout>
    <!-- Add other views or content as needed -->
    </FrameLayout>
</LinearLayout>
