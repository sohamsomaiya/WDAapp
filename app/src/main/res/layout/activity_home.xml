<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

<TextView
    android:id="@+id/WelcomeTxt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/welcome_nuser"
    android:textSize="34sp"
    android:layout_marginTop="71dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="center"
    />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/CreateWebCard"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:backgroundTint="?attr/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/EditWebCard"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/ViewSiteStatusCard"
        android:layout_marginBottom="40sp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="match_parent"
            android:src="@drawable/editwebcard"
            />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <TextView
        android:id="@+id/CreateWebTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_a_nwebsite"
        app:layout_constraintTop_toBottomOf="@+id/CreateWebCard"
        app:layout_constraintStart_toStartOf="@id/CreateWebCard"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/CreateWebCard"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/EditWebCard"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:backgroundTint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/LanguageCard"
        app:layout_constraintStart_toEndOf="@+id/ViewSiteStatusCard"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeTxt"
        app:cardCornerRadius="100dp"
        android:layout_marginBottom="40sp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:padding="14dp"
            app:tint="@color/blue"
            android:layout_height="match_parent"
            android:src="@drawable/editweb"
            />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <TextView
        android:id="@+id/EditWebTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_nwebsite"
        app:layout_constraintTop_toBottomOf="@+id/EditWebCard"
        app:layout_constraintStart_toStartOf="@id/EditWebCard"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/EditWebCard"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/ViewSiteStatusCard"
        android:layout_width="70sp"
        android:layout_height="70sp"
        app:layout_constraintEnd_toStartOf="@+id/LanguageCard"
        android:backgroundTint="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/QueryCard"
        app:layout_constraintTop_toBottomOf="@+id/EditWebCard"
        app:cardCornerRadius="100dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="match_parent"
            android:src="@drawable/checking"
            app:tint="@color/blue" />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <TextView
        android:id="@+id/ViewSiteStatusTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_site_nstatus"
        app:layout_constraintTop_toBottomOf="@+id/ViewSiteStatusCard"
        app:layout_constraintStart_toStartOf="@id/ViewSiteStatusCard"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/ViewSiteStatusCard"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/LanguageCard"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:backgroundTint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CreateWebCard"
        app:layout_constraintStart_toEndOf="@id/CreateWebCard"
        app:layout_constraintBottom_toTopOf="@id/QueryCard"
        app:cardCornerRadius="100dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="match_parent"
            android:src="@drawable/languages"
            app:tint="@color/blue" />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <TextView
        android:id="@+id/LanguageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        app:layout_constraintTop_toBottomOf="@+id/LanguageCard"
        app:layout_constraintStart_toStartOf="@id/LanguageCard"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/LanguageCard"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/QueryCard"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:backgroundTint="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70sp"
        app:cardCornerRadius="100dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:padding="14dp"
            android:layout_height="match_parent"
            android:src="@drawable/query"
            app:tint="@color/blue" />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <TextView
        android:id="@+id/QueryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/query"
        app:layout_constraintTop_toBottomOf="@+id/QueryCard"
        app:layout_constraintStart_toStartOf="@id/QueryCard"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/QueryCard"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorOnPrimary"
        app:menu="@menu/main_menu"
        />

</androidx.drawerlayout.widget.DrawerLayout>