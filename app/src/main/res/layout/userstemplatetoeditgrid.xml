<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WebCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:elevation="@dimen/cardview_default_elevation"
    app:strokeColor="@color/blue"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="5dp"
        >
<LinearLayout
    android:id="@+id/ImageLayoutUserTemplateEdit"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="left"
    app:layout_constraintBottom_toBottomOf="parent"
    >
        <ImageView
            android:id="@+id/SelectTemplateImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
</LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/ImageLayoutUserTemplateEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="left"
            app:flow_horizontalAlign="center"
            app:layout_constraintWidth_percent="0.67"
            >
        <TextView
            android:id="@+id/SelectTemplateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website Name"
            android:fontFamily="@font/inter"
            android:background="@color/white"
            android:textColor="@color/black"
            />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/DividerSelectTemplateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/SelectTemplateType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="Website Type"
            android:background="@color/white"
            android:textColor="@color/black"
            />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/DividerSelectTemplateType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/SelectTemplateDOI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOI"
            android:fontFamily="@font/inter"
            
            android:background="@color/white"
            android:textColor="@color/black"
            />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/DividerSelectTemplateDOI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/SelectTemplateCOI"
            android:layout_width="wrap_content"
            
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="COI"
            android:background="@color/white"
            android:textColor="@color/black"
            />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/DividerSelectTemplateCOI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/SelectTemplateDomainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domain Name"
            android:fontFamily="@font/inter"
            android:textSize="15sp"
            android:background="@color/white"
            android:textColor="@color/black"
            />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
